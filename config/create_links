#------------------------------------------------------------------------------#
# Create links and include directory in "src" directory
#------------------------------------------------------------------------------#
cd src;
[ -d include ] && rm -rf include;
mkdir include && cd include;

#------------------------------------------------------------------------------#
# Create actual links
#------------------------------------------------------------------------------#
for file in `find .. -type f -regex '.*\.h*'` ; do
	link=`echo $file`
	ln -s $link .
done
